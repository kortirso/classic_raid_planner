.inside
  .inside_topbar
    .title= t('users.title')
  main
    .users
      table.table.table-striped.table-sm
        thead
          tr
            th ID
            th= t('users.email')
            th= t('users.role')
            th= t('users.identities')
            th= t('users.confirmed')
            th= t('operations')
        tbody
          - @users.each do |user|
            tr
              td= user.id
              td= user.email
              td= user.role
              td.identities
                - user.identities.each do |identity|
                  p= "#{identity.provider}, #{identity.uid}, #{identity.email}"
              td= user.confirmed?
              td
                = link_to '', edit_user_path(user), class: 'btn btn-icon btn-edit with_right_margin'
                = link_to '', user, method: :delete, data: { confirm: t('buttons.sure') }, class: 'btn btn-icon btn-delete'
